{
  "name": "simplerpc",
  "displayName": "miyauw's simple discord rpc",
  "description": "miyauw's simple Discord Rich Presence extension for VS Code with customizable features",
  "version": "1.0.0",
  "publisher": "miyauwdev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "miyauw's simple discord rpc",
      "properties": {
        "simplerpc.applicationId": {
          "type": "string",
          "default": "",
          "description": "A super simple extension to add Discord Rich Presence to your VSCode",
          "order": 0
        },
        "simplerpc.largeImageKey": {
          "type": "string",
          "default": "vscode",
          "description": "The key for the large image asset",
          "order": 1
        },
        "simplerpc.largeImageText": {
          "type": "string",
          "default": "Visual Studio Code",
          "description": "The tooltip text for the large image",
          "order": 2
        },
        "simplerpc.smallImageKey": {
          "type": "string",
          "default": "",
          "description": "The key for the small image asset (leave empty to use file type icon)",
          "order": 3
        },
        "simplerpc.smallImageText": {
          "type": "string",
          "default": "",
          "description": "The tooltip text for the small image",
          "order": 4
        },
        "simplerpc.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Discord Rich Presence",
          "order": 5
        }
      }
    },
    "commands": [
      {
        "command": "simplerpc.enable",
        "title": "miyauw's simple discord rpc: Enable"
      },
      {
        "command": "simplerpc.disable",
        "title": "miyauw's simple discord rpc: Disable"
      },
      {
        "command": "simplerpc.reconnect",
        "title": "miyauw's simple discord rpc: Reconnect"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0"
  }
}